<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_calibration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextureView
        android:id="@+id/texture_view"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:9"  />

    <TextView
        android:id="@+id/text_face_match"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:lineHeight="24dp"
        android:text="Please follow the movement of the red dot with your eyes until the data entry is complete."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonToPage1"
        android:layout_width="155dp"
        android:layout_height="52dp"
        android:layout_marginStart="218dp"
        android:layout_marginTop="594dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="10dp"
        android:onClick="goToVideoChoose"
        android:text="Continue"
        android:textSize="24sp"
        app:backgroundTint="#000080"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonToPage3"
        android:layout_width="148dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="594dp"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="10dp"
        android:onClick="backToCalibration"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:backgroundTint="#8B1313"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
